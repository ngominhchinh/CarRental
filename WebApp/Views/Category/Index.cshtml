@model IEnumerable<Category>
<div class="hero inner-page" style="background-image: url('/images/hero_1_a.jpg');">        
    <div class="container">
        <div class="row align-items-end ">
            <div class="col-lg-5">
                <div class="intro">
                    <h1><strong></strong></h1>
                    <div class="custom-breadcrumbs"><a href="index.html"></a> <span class="mx-2"></span> <strong></strong></div>
                </div>                    

            </div>
        </div>
    </div>
</div> 
<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-2">
                <h2>Danh sách loại xe</h2>
                <p></p>
            </div>
            <a href="/category/add">Thêm loại xe</a>
        </div>
    </div>
    
    <div class="container">
        <div class="row justify-content-center">
        
        <table class="table col-6">
            <thead >
                <tr class="bg-secondary">
                    <th>Id</th>
                    <th>Tên loại</th>   
                    <th>Command</th>                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model){
                    <tr>
                        
                        <td>@item.CategoryId</td>
                        <td>@item.CategoryName</td>                        
                        <td>                            
                            <a class="btn btn-outline-primary" href="/category/edit/@item.CategoryId">Sửa</a>
                            <a class="btn btn-outline-primary" href="/category/delete/@item.CategoryId">Xóa</a>                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
    
