@model IEnumerable<Car>

<div class="hero" style="background-image: url('images/hero_1_a.jpg');">

  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-10">

        <form class="trip-form">
          <div class="row align-items-center text-center">
            <div class="col-6">
              <div class="form-control-wrap">
                <input type="text" id="startDate" placeholder="Từ ngày" class="form-control datepicker px-3" required>
                <span class="icon icon-date_range"></span>
              </div>
            </div>
            <div class="col-6">
              <div class="form-control-wrap">
                <input type="text" id="endDate" placeholder="Đến ngày" class="form-control datepicker px-3" required>
                <span class="icon icon-date_range"></span>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="site-section bg-light">
  <div class="container-fluid">
    <div class="row">
      @foreach (Car item in Model)
      {
        <div class="col-md-6 col-lg-3 mb-1" v="@item.CarId">
          <div class="listing d-block  align-items-stretch">
            <div class="listing-img h-100 mr-4">
              <img src="http://localhost:5235/images/@item.ImageUrl" alt="Image" class="img-fluid">
            </div>
            <div class="listing-contents h-100">
              <h3>@item.CarName</h3>
              <div class="rent-price">
                Giá thuê: <strong>@item.PricePerDay.ToString("#,###")</strong><span class="mx-1">/</span>ngày
              </div>
              <div class="d-block d-md-flex mb-0 border-bottom pb-1">
                <div class="listing-feature pr-2">
                  <span class="caption">Hãng:</span>
                  <span class="number">@item.ManufacturerName</span>
                </div>
                <div class="listing-feature pr-2">
                  <span class="caption">Năm:</span>
                  <span class="number">@item.ProducedYear</span>
                </div>
              </div>
              <div class="row text-center">
                <div class="col-6">
                  <p><a href="#" class="btn btn-outline-danger btn-sm mt-3 ">Đặt xe</a></p>
                </div>
                <div class="col-6">
                  <button class="btn btn-outline-primary btn-sm mt-3 carDetail" data-toggle="modal" data-target="#carModal-@item.CarId" >Chi tiết</button>
                </div>
              </div>
              <!-- Modal -->
              <div class="modal fade" id="carModal-@item.CarId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Chi tiết xe</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <div class="row">
                        <div class="col-4">Hãng xe</div>
                        <div class="col-8">@item.ManufacturerName</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Dòng xe</div>
                        <div class="col-8">@item.CarName</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Năm sản xuất</div>
                        <div class="col-8">@item.ProducedYear</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Giá thuê</div>
                        <div class="col-8">@item.PricePerDay.ToString("#,###") /ngày</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Màu</div>
                        <div class="col-8">@item.Color</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Truyền động</div>
                        <div class="col-8">@item.GearboxName</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Nhiên liệu</div>
                        <div class="col-8">@item.FuelName</div>
                      </div>
                      <div class="row">
                        <div class="col-4">Địa điểm</div>
                        <div class="col-8">@item.Location</div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-outline-primary">Đặt xe</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</div>

