@model IEnumerable<Car>

<div class="hero" style="background-image: url('images/hero_1_a.jpg');">
        
        <div class="container">
          <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">
              
              <form class="trip-form">                
                <div class="row align-items-center text-center">                                   
                  <div class="col-6">
                    <div class="form-control-wrap">
                      <input type="text" id="startDate" placeholder="Từ ngày" class="form-control datepicker px-3">
                      <span class="icon icon-date_range"></span>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-control-wrap">
                      <input type="text" id="endDate" placeholder="Đến ngày" class="form-control datepicker px-3">
                      <span class="icon icon-date_range"></span>
                    </div>
                  </div>                  
                </div>                
              </form>
            </div>
          </div>
        </div>
      </div>
<div class="site-section bg-light">
  <div class="container">
    <div class="row">
      @foreach (Car item in Model)      {
        <div class="col-md-6 col-lg-3 mb-1">
          <div class="listing d-block  align-items-stretch">
            <div class="listing-img h-100 mr-4">
              <img src="http://localhost:5235/images/@item.ImageUrl" alt="Image" class="img-fluid">
            </div>
            <div class="listing-contents h-100">
              <h3>@item.CarName</h3>
              <div class="rent-price">
                Giá thuê: <strong>@item.PricePerDay.ToString("#,###")</strong><span class="mx-1">/</span>ngày
              </div>
              <div class="d-block d-md-flex mb-0 border-bottom pb-1">
                <div class="listing-feature pr-2">
                  <span class="caption">Hãng:</span>
                  <span class="number">@item.ManufacturerId</span>
                </div>
                <div class="listing-feature pr-2">
                  <span class="caption">Năm:</span>
                  <span class="number">@item.ProducedYear</span>
                </div>
              </div>
              <div class="row text-center">
                  <div class="col-6">
                    <p><a href="#" class="btn btn-outline-danger btn-sm mt-1 ">Đặt xe</a></p>
                  </div>
                  <div class="col-6">
                    <p><a href="#" class="btn btn-outline-primary btn-sm mt-1">Chi tiết</a></p>
                  </div>              
              </div>              
            </div>
          </div>
        </div>
      }
    </div>
  </div>  
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


