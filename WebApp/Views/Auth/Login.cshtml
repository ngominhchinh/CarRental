@model LoginModel
<div asp-validation-summary="All">
    <div class="hero inner-page" style="background-image: url('/images/hero_1_a.jpg');">        
        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-5">
                    <div class="intro">
                        <h1><strong>Đăng nhập</strong></h1>
                        <div class="custom-breadcrumbs"><a href="index.html">Home</a> <span class="mx-2">/</span> <strong>Đăng nhập</strong></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-7 text-center mb-2">
                    <h2>Đăng nhập</h2>
                    <p></p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8" >
                <form method="post">
                    <div class="row">
                        <label class="col-2 form-label " asp-for="Email">Email</label>
                        <div class="col-8 ">
                            <input class="form-control" type="email" asp-for="Email">
                        </div>        
                    </div>                    
                    <div class="row">
                        <label class="col-2 form-label " asp-for="Password">Mật khẩu</label>
                        <div class="col-8 ">
                            <input class="form-control" type="password" asp-for="Password">
                        </div>        
                    </div>
                    
                    <div class="row justify-content-center">
                        <button class="btn btn-outline-primary mt-3">Đăng nhập</button>
                    </div>
                </form>
            </div>          
        </div>
    </div>
</div>
