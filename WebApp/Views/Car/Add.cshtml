@model Car
<div asp-validation-summary="All">
    <div class="hero inner-page" style="background-image: url('/images/hero_1_a.jpg');">        
        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-5">
                    <div class="intro">
                        <h1><strong>Đăng ký xe</strong></h1>
                        <div class="custom-breadcrumbs"><a href="index.html">Home</a> <span class="mx-2">/</span> <strong>Đăng ký xe</strong></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-7 text-center mb-2">
                    <h2>Đăng ký xe cho thuê</h2>
                    <p></p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8" >
                <form method="post">
                    <div>
                        <input type="hidden" value="">
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="ManufacturerId">Hãng xe</label>
                        <div class="col-8 ">
                            <select class="form-control" asp-for="ManufacturerId" asp-items="@ViewBag.Manufacturers"></select>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="CategoryId">Loại xe</label>
                        <div class="col-8 ">
                            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="GearboxId">Động cơ</label>
                        <div class="col-8 ">
                            <select class="form-control" asp-for="GearboxId" asp-items="@ViewBag.Gearboxes"></select>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="FuelId">Nhiên liệu</label>
                        <div class="col-8 ">
                            <select class="form-control" asp-for="FuelId" asp-items="@ViewBag.Fuels"></select>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="CarName">Tên xe</label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="CarName">
                        </div>        
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="Color">Màu xe</label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="Color">
                        </div>        
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="ProducedYear">Năm sản xuất</label>
                        <div class="col-8 ">
                            <input class="form-control" type="number" min="1995" step="1" asp-for="ProducedYear">
                        </div>        
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="NumberPlate">Biển số xe</label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="NumberPlate">
                        </div>        
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="PricePerDay">Giá thuê</label>
                        <div class="col-8 ">
                            <input class="form-control" type="number" asp-for="PricePerDay" min="0" max="100000000" step="1">
                        </div>        
                    </div>
                    <div class="row">
                        <label class="col-2 form-label " asp-for="Location">Địa điểm nhận xe</label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="Location">
                        </div>        
                    </div>                    
                    
                    <div class="row justify-content-center">
                        <button class="btn btn-outline-primary mt-3">Đăng ký</button>
                    </div>
                </form>
            </div>          
        </div>
    </div>
</div>
