@model IEnumerable<Car>
    
<div class="hero inner-page" style="background-image: url('/images/hero_1_a.jpg');">
    <div class="container">
        <div class="row align-items-end ">
            <div class="col-lg-5">
                <div class="intro">
                    <h1><strong></strong></h1>
                    <div class="custom-breadcrumbs"><a href="index.html"></a> <span class="mx-2"></span>
                        <strong></strong></div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-2">
                <h2>Danh sách xe cho thuê</h2>
                <p></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <table class="table">
                <thead>
                    <tr class="bg-secondary">
                        <th>Hình</th>
                        <th>Hãng xe</th>
                        <th>Dòng xe</th>
                        <th>Năm sản xuất</th>
                        <th>Biển số</th>
                        <th>Giá cho thuê</th>
                        <th>Tình trạng</th>
                        <th>Command</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="http://localhost:5235/images/@item.ImageUrl" alt="@item.CarName" class="img-fluid"
                                    height="100" width="100">
                            </td>
                            <td>@item.ManufacturerName</td>
                            <td>@item.CarName</td>
                            <td>@item.ProducedYear</td>
                            <td>@item.NumberPlate</td>
                            <td>@item.PricePerDay.ToString("#,###")</td>
                            <td>
                                @if (item.CarStatus)
                                {
                                    <p>Đang cho thuê</p>
                                }
                                else
                                {
                                    <p>Đang rảnh</p>
                                }
                            </td>
                            <td>
                                <a class="btn btn-outline-primary" href="/Car/Edit/@item.CarId">Sửa</a>
                                <a class="btn btn-outline-primary" href="/Car/Delete/@item.CarId">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
