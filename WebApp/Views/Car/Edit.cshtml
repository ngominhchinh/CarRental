@model Car
<div asp-validation-summary="All">
    <div class="hero inner-page" style="background-image: url('/images/hero_1_a.jpg');">        
        <div class="container">
            <div class="row align-items-end ">
                <div class="col-lg-5">
                    <div class="intro">
                        <h1><strong>Cập nhật xe</strong></h1>
                        <div class="custom-breadcrumbs"><a href="/">Home</a> <span class="mx-2">/</span> <strong>Cập nhật xe</strong></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-7 text-center mb-2">
                    <h2>Cập nhật xe cho thuê</h2>
                    <p></p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8" >
                <form method="post">
                    <div class="row mt-1">
                        <label class="col-2 form-label "></label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="MemberId">
                        </div>        
                    </div>
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="ManufacturerId"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="ManufacturerId"></input>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="CategoryId"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="CategoryId"></input>
                        </div>
                    </div>   
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="CarName">Tên xe</label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="CarName">
                        </div>        
                    </div>  
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="ProducedYear"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="ProducedYear"></input>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="Color"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="Color"></input>
                        </div>
                    </div>             
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="NumberPlate"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="NumberPlate"></input>
                        </div>
                    </div> 
                                                                              
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="PricePerDay">Giá thuê</label>
                        <div class="col-8 ">
                            <input class="form-control" type="number" asp-for="PricePerDay" min="0" max="100000000" step="10000">
                        </div>        
                    </div>
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="Location">Vị trí lấy xe</label>
                        <div class="col-8 ">
                            <input class="form-control" type="text" asp-for="Location">
                        </div>        
                    </div>  
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="FuelId"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="FuelId"></input>
                        </div>
                    </div> 
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="GearboxId"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="GearboxId"></input>
                        </div>
                    </div> 
                    <div class="row mt-1">
                        <label class="col-2 form-label " asp-for="ImageUrl"></label>
                        <div class="col-8 ">
                            <input type="text" class="form-control" asp-for="ImageUrl"></input>
                            
                        </div>
                    </div> 
                                                                
                    <div class="row justify-content-center">
                        <button class="btn btn-outline-primary mt-3">Lưu lại</button>
                    </div>
                </form>
            </div>          
        </div>
    </div>
</div>
